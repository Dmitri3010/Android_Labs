<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Новая заметка"
            android:layout_width="130dp"
            android:layout_height="29dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="59dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="210dp"
            android:layout_height="101dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/newNoteText"
            android:text="Ведите название заметки" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="234dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp"/>
    <Button
            android:text="Создать"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createNote" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="505dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp"/>
</android.support.constraint.ConstraintLayout>